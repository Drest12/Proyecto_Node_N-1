<%- include("templates/cabecera")%>
<% if(user) { %>
<div class="container mt-4">
    <div class="card border-danger">
        <div class="card-header"><h3>Modificar Registro</h3></div>
            <div class="card-body">
                <form action="/updateaula" method="post">
                    <div class="mb-3">
                        <label for="codigo" class="from-label">Id:</label>
                        <input type="text" class="form-control" value="<%= user.IdAula %>" id="aula" name="aula" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="nombre" class="from-label">Aula:</label>
                        <input type="text" class="form-control" value="<%= user.Aula %>" id="nom" name="nom" tabindex="2">
                    </div>
                    <div class="mb-3">
                        <label for="creditos" class="from-label">Aforo:</label>
                        <input type="text" class="form-control" value="<%= user.Aforo %>" id="afo" name="afo" tabindex="3">
                    </div>
                    <button type="submit" class="btn btn-primary" tabindex="4">Guardar</button>
                    <a href="/aula" class="btn btn-warning">Cancelar</a>
                </form>
            </div>
    </div>
</div>
<% } %>