<%- include("templates/cabecera")%>
<% if(user) { %>
<div class="container mt-4">
    <div class="card border-danger">
        <div class="card-header"><h3>Modificar Registro</h3></div>
            <div class="card-body">
                <form action="/updatealumno" method="post">
                    <div class="mb-3">
                        <label for="codigo" class="from-label">Id Alumno:</label>
                        <input type="text" class="form-control" value="<%= user.IdAlumno %>" id="cod" name="id" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="nombre" class="from-label">Nombre:</label>
                        <input type="text" class="form-control" value="<%= user.Nombres %>" id="nom" name="nom" tabindex="2">
                    </div>
                    <div class="mb-3">
                        <label for="creditos" class="from-label">Apellido:</label>
                        <input type="text" class="form-control"value="<%= user.Apellidos %>"  id="cre" name="ape" tabindex="3">
                    </div>
                    <div class="mb-3">
                        <label for="creditos" class="from-label">Correo:</label>
                        <input type="email" class="form-control" value="<%= user.Correo %>" id="cre" name="cor" tabindex="4">
                    </div>
                    <div class="mb-3">
                        <label for="creditos" class="from-label">Telefono:</label>
                        <input type="number" class="form-control" value="<%= user.Telefono %>" id="cre" name="tel" tabindex="5">
                    </div>
                    <button type="submit" class="btn btn-primary" tabindex="6">Guardar</button>
                    <a href="/alumno" class="btn btn-warning">Cancelar</a>
                </form>
            </div>
    </div>
</div>
<% } %>