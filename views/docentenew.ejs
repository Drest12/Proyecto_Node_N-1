<%- include("templates/cabecera.ejs")%>

<div class="container mt-4">
    <div class="card border-danger">
        <div class="card-header"><h3>Nuevo Registro Docente</h3></div>
        <div class="card-body">
            <form action="/savedocente" method="post">
                <div class="mb-3">
                    <label for="codigo" class="from-label">Código:</label>
                    <input type="text" class="form-control" id="cod" name="cod" tabindex="1">
                </div>
                <div class="mb-3">
                    <label for="nombre" class="from-label">Nombre:</label>
                    <input type="text" class="form-control" id="nom" name="nom" tabindex="2">
                </div>
                <div class="mb-3">
                    <label for="apellidos" class="from-label">Apellidos:</label>
                    <input type="text" class="form-control" id="ape" name="ape" tabindex="3">
                </div>
                <div class="mb-3">
                    <label for="correo" class="from-label">Correo:</label>
                    <input type="text" class="form-control" id="correo" name="correo" tabindex="4">
                </div>
                <div class="mb-3">
                    <label for="telefono" class="from-label">Teléfono:</label>
                    <input type="text" class="form-control" id="tel" name="tel" tabindex="5">
                </div>
                <button type="submit" class="btn btn-primary" tabindex="6">Guardar</button>
                <a href="/docente" class="btn btn-warning">Cancelar</a>
            </form>
        </div>
    </div>
</div>