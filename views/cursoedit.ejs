<%- include("templates/cabecera.ejs")%>
    <div class="container mt-4">
        <div class="card border-danger">
            <div class="card-header"><h3>Modificar Registro</h3></div>
            <div class="card-body">
                <form action="/cursoedit" method="post">
                    <div class="mb-3">
                        <label for="nombre" class="from-label">IdCurso:</label>
                        <input type="text" class="form-control" value="<%=results.IdCurso%>" id="id" name="id" tabindex="2">
                    </div>
                    <div class="mb-3">
                        <label for="creditos" class="from-label">Curso:</label>
                        <input type="text" class="form-control" value="<%=results.Curso%>" id="cur" name="cur" tabindex="3">
                    </div>
                    <div class="mb-3">
                        <label for="creditos" class="from-label">Creditos:</label>
                        <input type="text" class="form-control" value="<%=results.Creditos%>" id="cre" name="cre" tabindex="4">
                    </div>
                    <div class="mb-3">
                        <label for="creditos" class="from-label">PreRequisito:</label>
                        <input type="text" class="form-control" value="<%=results.PreRequisito%>" id="pre" name="pre" tabindex="5">
                    </div>
                    <button type="submit" class="btn btn-primary" tabindex="4">Guardar</button>
                    <a href="/curso" class="btn btn-warning">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
