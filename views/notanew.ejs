<%- include("templates/cabecera")%>
<div class="container mt-4">
    <div class="card border-danger">
        <div class="card-header"><h3>Nuevo Registro Nota</h3></div>
            <div class="card-body">
                <form action="/savenota" method="post">
                    <div class="mb-3">
                        <label for="codigo" class="from-label">IdAlumno:</label>
                        <input type="text" class="form-control" id="idAlu" name="idAlu" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="nombre" class="from-label">IdCurso:</label>
                        <input type="text" class="form-control" id="idCur" name="idCur" tabindex="2">
                    </div>
                    <div class="mb-3">
                        <label for="creditos" class="from-label">IdAula:</label>
                        <input type="text" class="form-control" id="idAul" name="idAul" tabindex="3">
                    </div>
                    <div class="mb-3">
                        <label for="creditos" class="from-label">IdDocente:</label>
                        <input type="text" class="form-control" id="idDoc" name="idDoc" tabindex="4">
                    </div>
                    <div class="mb-3">
                        <label for="creditos" class="from-label">Practicas:</label>
                        <input type="text" class="form-control" id="pra" name="pra" tabindex="5">
                    </div>
                    <div class="mb-3">
                        <label for="creditos" class="from-label">Parcial:</label>
                        <input type="text" class="form-control" id="par" name="par" tabindex="5">
                    </div>
                    <div class="mb-3">
                        <label for="creditos" class="from-label">Final:</label>
                        <input type="text" class="form-control" id="fin" name="fin" tabindex="5">
                    </div>
                    <button type="submit" class="btn btn-primary" tabindex="4">Guardar</button>
                    <a href="/nota" class="btn btn-warning">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>